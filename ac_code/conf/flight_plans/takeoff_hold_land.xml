<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="17.2" ground_alt="16" lat0="22.540656" lon0="113.923446" max_dist_from_home="10000" name="Rotorcraft Basic (Enac)" security_height="1">
  <header>
#include "autopilot.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="0.5" y="-0.3"/>
    <waypoint name="CLIMB" x="-4.4" y="0.7"/>
    <waypoint name="STDBY" x="-3.4" y="-1.7"/>
    <waypoint name="p1" x="11.5" y="2.0"/>
    <waypoint name="TD" x="-7.1" y="-0.8"/>
    <waypoint name="S1" x="-10.5" y="-14.0"/>
    <waypoint name="S2" x="-13.5" y="-0.3"/>
    <waypoint name="S3" x="-4.6" y="12.5"/>
    <waypoint name="S4" x="15.6" y="-1.1"/>
    <waypoint name="S5" x="1.5" y="-11.5"/>
    <waypoint name="p2" x="30" y="-11.5"/>
  </waypoints>
  <sectors>
    <sector name="PolySector" type="dynamic">
      <corner name="S1"/>
      <corner name="S2"/>
      <corner name="S3"/>
      <corner name="S4"/>
      <corner name="S5"/>
    </sector>
  </sectors>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" post_call="NavSetWaypointHere(WP_CLIMB)" strip_button="Takeoff" strip_icon="up.png">
      <exception cond="stateGetPositionEnu_f()->z > 0.3" deroute="Climb"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay height="1.2" wp="CLIMB"/>
    </block>
    <block name="Climb">
      <exception cond="stateGetPositionEnu_f()->z > 1.0" deroute="Standby"/>
      <stay height="1.2" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="standby.png">
      <call fun="nav_set_heading_towards_waypoint(WP_STDBY)"/>
      <while cond="LessThan(NavBlockTime(), 5)"/>
      <go hmode="route" wp="STDBY"/>
      <stay wp="STDBY"/>
    </block>
    <block name="stay_p1" strip_button="stay p1" strip_icon="waypoint_one.png">
      <call fun="nav_set_heading_towards_waypoint(WP_p1)"/>
      <while cond="LessThan(NavBlockTime(), 8)"/>
      <go hmode="route" wp="p1"/>
      <stay wp="p1"/>
    </block>
    <block name="circle4" strip_button="circle_2.5m" strip_icon="circle-right.png">
      <set value="2.5" var="nav_radius"/>
      <circle radius="nav_radius" until="NavCircleCount() > 2.0" wp="TD"/>
      <deroute block="Standby"/>
    </block>
    <block name="circle3" strip_button="circle_-2m" strip_icon="circle-left.png">
      <set value="-2.0" var="nav_radius"/>
      <circle radius="nav_radius" until="NavCircleCount() > 2.0" wp="TD"/>
      <deroute block="Standby"/>
    </block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="0.36 > agl_dist_value_filtered" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-0.15" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
